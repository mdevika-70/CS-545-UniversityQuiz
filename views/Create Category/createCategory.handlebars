{{> headers this}}

<div class="container">
    <div class="row justify-content-md-center row-custom">
        <div class="col-sm-8">
            <h1>{{title}}</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a class="student_dash" href="./category">Dashboard</a></li>
                    <li class="breadcrumb-item"><a class="student_dash" href="#">Create Category</a></li>
                </ol>
            </nav>
            {{#if success }}
            <p class="success text-success"> {{message}} </p>
            {{/if}}

            {{#if is_error}}
            <p class="error text-danger"> {{message}} </p>
            {{/if}}
            <form method="post">
                <div class="form-group">
                    <label for="category_name">Category Name: </label>
                    <input list="category_name_list" class="form-control" name="category_name" id="category_name"
                        placeholder="Enter/Search Category" autocomplete="off" required>
                    <datalist id="category_name_list">
                        {{#each getAllCategoryData}}
                        <option value="{{this}}">
                            {{/each}}
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="sub_category_name">Sub Category Name</label>
                    <input type="text" id="sub_category_name" name="sub_category_name" class="form-control"
                        placeholder="Enter Sub Category" autocomplete="off" required>
                </div>
                <button type="submit" name="submitCategoryData" id="submitCategoryData"
                    class="btn btn-info">Submit</button>
            </form>
        </div>
    </div>
</div>