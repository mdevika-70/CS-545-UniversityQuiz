{{> headers this}}

<div class="container">
  <div class="row justify-content-md-center row-custom">
    <div class="col-sm-10">
      <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="student_dash" href="./category">Dashboard</a></li>
            <li class="breadcrumb-item"><a class="student_dash" href="#">My All Student</a></li>
          </ol>
        </nav>
      <div class="card col-sm-12">
        <div class="card-body">
          <h1 class="card-title">All Student</h1>
        </div>
        <ul class="list-group list-group-flush" id="todoArea">
          {{#each getAllStudentUnderProfessorResult}}
          <li class="list-group-item"><a>{{firstName}} {{lastName}}</a>
            {{#if isActive }}
            {{else}}
            <button type="submit" class="btn btn-info verifyClass" data-id="{{_id}}"
              id="verifyStatusID">Verify</button>
            {{/if}}
          </li>
          {{/each}}
        </ul>
      </div>
      {{> error-section this}}
    </div>
  </div>
</div>
<script src="../../public/js/verifyStudent.js"></script>